<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/lo_review_camp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F9F9F9"
        app:cardCornerRadius="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_camp_review_img"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_camp_review_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_review_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_camp_review_img"
                android:layout_marginStart="14dp"
                android:text="유형"
                android:textColor="@color/brandColor"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_review_category"
                app:layout_constraintStart_toEndOf="@id/cv_camp_review_img"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:text="야영장명"
                android:textColor="@color/black"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_review_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_review_title"
                app:layout_constraintStart_toEndOf="@id/cv_camp_review_img"
                android:layout_marginStart="14dp"
                android:text="주소"
                android:textColor="@color/black"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="-3dp"
                android:text="100"
                android:textColor="@color/black"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:textSize="12sp"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintEnd_toStartOf="@id/tv_review_count"
                app:layout_constraintTop_toTopOf="@id/tv_review_count"
                app:layout_constraintBottom_toBottomOf="@id/tv_review_count"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_review"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lo_review_camp"
        android:layout_marginTop="7dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#EAEAEA"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="12dp"
            android:text="댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글댓글"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:fontFamily="@font/spoqahansansneo_regular"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>