<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:text="댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용댓글내용"
        android:ellipsize="end"
        android:maxLines="3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-01-13 10:32"
        android:textSize="11sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_content"
        app:layout_constraintStart_toStartOf="@id/tv_comment_content"/>
    <TextView
        android:id="@+id/tv_comment_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="삭제"
        android:layout_marginStart="160dp"
        app:layout_constraintStart_toEndOf="@id/tv_comment_time"
        app:layout_constraintTop_toTopOf="@id/tv_comment_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_comment_time"/>

    <ImageView
        android:id="@+id/iv_comment_img"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/default_camping"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tv_comment_content"
        app:layout_constraintTop_toTopOf="@id/tv_comment_content"
        android:scaleType="centerCrop"/>

</androidx.constraintlayout.widget.ConstraintLayout>