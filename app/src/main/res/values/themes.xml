<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CampingMate" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/brandColor</item>
        <item name="android:fontFamily">@font/spoqahansansneo</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.CampingMate" parent="Base.Theme.CampingMate" />
    <style name="Theme.profile" parent="Widget.Material3.TabLayout.Secondary">
        <item name="colorPrimary">@color/background</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="tabIndicatorColor">#353535</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brandColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_glamping</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_brand_img</item>
        <item name="postSplashScreenTheme">@style/Theme.CampingMate</item>
    </style>
</resources>