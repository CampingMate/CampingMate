<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNav">
        <item name="android:fontFamily">@font/spoqahansansneo</item>
    </style>

    <style name="CustomBottomNav.default">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomBottomNav.caps">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="GreenText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="GreenText.Large">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="android:textColor">@color/chip_txt</item>
        <item name="chipStrokeColor">@color/chip_str</item>
        <item name="android:textSize">14sp</item>
        <item name="chipEndPadding">6dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipMinHeight">50dp</item>
    </style>
    <!--  원래 customChipChoice의 chipEnd/startPadding은 12였다.  -->
    <style name="CustomChipChoiceLocation" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="android:textColor">@color/chip_txt</item>
        <item name="chipStrokeColor">@color/chip_str</item>
        <item name="android:textSize">14sp</item>
        <item name="chipEndPadding">22dp</item>
        <item name="chipStartPadding">22dp</item>
        <item name="chipMinHeight">50dp</item>
    </style>

    <style name="CustomChipChoiceHome" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="android:textColor">@color/chip_txt</item>
        <item name="chipStrokeColor">@color/chip_str</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/spoqahansansneo</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipMinHeight">36dp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/shape_rounded_corner_background_r6</item>
        <item name="android:backgroundTint">@color/search_gray</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">검색어를 입력하세요</item>
    </style>

    <style name="ImageViewR10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ImageViewR8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ImageViewCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.FloatingButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.App" parent="@android:style/Theme.DeviceDefault" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/brandColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_img</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_brand_img_600_240</item>
        <item name="postSplashScreenTheme">@style/Theme.CampingMate</item>

        <item name="windowSplashScreenIconBackgroundColor">@color/brandColor</item>
        <!--        <item name="windowSplashScreenBackground">@android:color/black</item>-->
        <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_img</item>-->
        <!--        <item name="postSplashScreenTheme">@style/Theme.App</item>-->
    </style>

</resources>